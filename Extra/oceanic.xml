<style-scheme id="oceanic" _name="Oceanic" version="1.0">
  <author>Ian McFarlane</author>
  <_description>Color scheme using Oceanic Next color palette</_description>

  <!-- Tango Palette -->
  <color name="oceanblue"                   value="#1b2b34"/>
  <color name="oceancream"                  value="#d8dee9"/>
  <color name="black"                       value="#343d46"/>
  <color name="red"                         value="#EC5f67"/>
  <color name="green"                       value="#99C794"/>
  <color name="yellow"                      value="#FAC863"/>
  <color name="blue"                        value="#6699cc"/>
  <color name="magenta"                     value="#c594c5"/>
  <color name="cyan"                        value="#5fb3b3"/>
  <color name="white"                       value="#d8dee9"/>
  <color name="skyblue2"                    value="#3465a4"/>
  <color name="skyblue3"                    value="#204a87"/>
  <color name="plum1"                       value="#ad7fa8"/>
  <color name="plum2"                       value="#75507b"/>
  <color name="plum3"                       value="#5c3566"/>
  <color name="chocolate1"                  value="#e9b96e"/>
  <color name="chocolate2"                  value="#c17d11"/>
  <color name="chocolate3"                  value="#8f5902"/>
  <color name="scarletred1"                 value="#ef2929"/>
  <color name="scarletred2"                 value="#cc0000"/>
  <color name="scarletred3"                 value="#a40000"/>
  <color name="aluminium1"                  value="#eeeeec"/>
  <color name="aluminium2"                  value="#d3d7cf"/>
  <color name="aluminium3"                  value="#babdb6"/>
  <color name="aluminium4"                  value="#888a85"/>
  <color name="aluminium5"                  value="#555753"/>
  <color name="aluminium6"                  value="#2e3436"/>

  <!-- Global Settings -->
  <style name="line-numbers"                background="oceanblue"/>
  <style name="current-line"                background="black"/>
  <style name="current-line-number"         background="oceanblue"/>
  <style name="draw-spaces"                 foreground="aluminium3"/>
  <style name="background-pattern"          background="aluminium1"/>

  <!-- Bracket Matching -->
  <style name="bracket-match"               foreground="aluminium1" background="aluminium3"/>
  <style name="bracket-mismatch"            foreground="aluminium1" background="red"/>

  <!-- Right Margin -->
  <style name="right-margin"                foreground="aluminium6" background="aluminium6"/>

  <!-- Search Matching -->
  <style name="search-match"                background="green"/>

  <!-- Comments -->
  <style name="def:comment"                 foreground="blue"/>
  <style name="def:shebang"                 foreground="blue" bold="true"/>
  <style name="def:doc-comment-element"     italic="true"/>

  <!-- Constants -->
  <style name="def:constant"                foreground="cyan"/>
  <style name="def:special-char"            foreground="cyan"/>

  <!-- Identifiers -->
  <style name="def:identifier"              foreground="magenta"/>

  <!-- Statements -->
  <style name="def:statement"               foreground="red" bold="true"/>

  <!-- Types -->
  <style name="def:type"                    foreground="cyan" bold="true"/>

  <!-- Markup -->
  <style name="def:emphasis"                italic="true"/>
  <style name="def:strong-emphasis"         foreground="red" bold="true"/>
  <style name="def:inline-code"             foreground="blue"/>
  <style name="def:insertion"               underline="single"/>
  <style name="def:deletion"                strikethrough="true"/>
  <style name="def:link-text"               foreground="cyan"/>
  <style name="def:link-symbol"             foreground="blue" bold="true"/>
  <style name="def:link-destination"        italic="true" underline="single"/>
  <style name="def:heading"                 foreground="white" bold="true"/>
  <style name="def:thematic-break"          foreground="white" bold="true"/>
  <style name="def:preformatted-section"    foreground="blue"/>
  <style name="def:list-marker"             foreground="red" bold="true"/>

  <!-- Others -->
  <style name="def:preprocessor"            foreground="magenta"/>
  <style name="def:error"                   background="red" bold="true"/>
  <style name="def:warning"                 background="yellow"/>
  <style name="def:note"                    background="oceancream" bold="true"/>
  <style name="def:net-address"             italic="true" underline="single"/>

  <!-- Heading styles, uncomment to enable -->
  <style name="def:heading0"                scale="5.0"/>
  <style name="def:heading1"                scale="2.5"/>
  <style name="def:heading2"                scale="2.0"/>
  <style name="def:heading3"                scale="1.7"/>
  <style name="def:heading4"                scale="1.5"/>
  <style name="def:heading5"                scale="1.3"/>
  <style name="def:heading6"                scale="1.2"/>

  <!-- Language specific -->
  <style name="diff:added-line"             foreground="green"/>
  <style name="diff:removed-line"           foreground="cyan"/>
  <style name="diff:changed-line"           use-style="def:preprocessor"/>
  <style name="diff:diff-file"              use-style="def:type"/>
  <style name="diff:location"               use-style="def:statement"/>
  <style name="diff:special-case"           use-style="def:constant"/>

  <style name="xml:tags"                    foreground="green"/>
  <style name="xml:namespace"               bold="true"/>

  <style name="js:built-in-constructor"     foreground="green"/>

  <style name="latex:display-math"          foreground="cyan"/>
  <style name="latex:command"               foreground="green" bold="true"/>
  <style name="latex:include"               use-style="def:preprocessor"/>
  <style name="latex:special-char"          use-style="def:constant"/>

  <style name="sh:variable"                 foreground="cyan"/>
  <style name="sh:variable-definition"      foreground="green"/>

</style-scheme>
